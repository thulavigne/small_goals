<div id='step'>
  <h2><%= @step.name %></h2>
  <span id='author'>Created by <%= @step.user.email %></span>
</br>
  <% if user_signed_in? %>
    <%= link_to "Edit Step", [:edit, @goal, @step] %> |
    <%= link_to "Delete Step", [@goal, @step], :method => :delete,
             :confirm => "Are you sure you want to delete this step?" %> |
  <% end %>
  <%= link_to "Back", [@goal] %>
</div>
